---
import { Image } from 'astro:assets'

export interface Props {
  src: any
  alt: string
  caption: string
}

const { src, caption } = Astro.props
---

<div class="flex flex-col items-center">
  <Image src={src} alt={caption} />
  <p style="font-style: italic; margin-top: 8px;">{caption}</p>
</div>
