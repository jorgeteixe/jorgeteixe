---
interface Props {
  href: string;
  variant?: 'primary' | 'secondary' | 'ghost';
  target?: string;
  rel?: string;
  class?: string;
}

const { 
  href, 
  variant = 'primary', 
  target, 
  rel, 
  class: className = '' 
} = Astro.props;

const baseClasses = 'inline-flex items-center px-4 py-2 text-sm font-medium transition-colors rounded-md';

const variants = {
  primary: 'border border-gray-300 text-gray-700 bg-white hover:bg-gray-50',
  secondary: 'text-gray-700 hover:text-gray-900',
  ghost: 'text-gray-500 hover:text-gray-700'
};

const classes = `${baseClasses} ${variants[variant]} ${className}`;
---

<a 
  href={href}
  target={target}
  rel={rel}
  class={classes}
>
  <slot />
</a>