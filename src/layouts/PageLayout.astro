---
import BaseLayout from './BaseLayout.astro'
import Header from '../components/Header.astro'
import GithubStyle from '../components/GithubStyle.astro'
import ReadmeBox from '../components/ReadmeBox.astro'

type Props = {
  title: string
  description: string
  image: string
}

const { title, description, image } = Astro.props
---

<BaseLayout
  title={`${title} - Jorge Teixeira`}
  description={description}
  image={image || '/meta.png'}
>
  <div class="min-h-full max-w-4xl mx-auto py-5 px-2 md:px-4">
    <Header />
    <div class="h-5"></div>
    <ReadmeBox>
      <GithubStyle>
        <slot />
      </GithubStyle>
    </ReadmeBox>
  </div>
</BaseLayout>
